/**index.wxss**/
.container{
    width:100%;
    height:100%;
    background: #f5f5f5;
}
.swip{
    width:100%;
}
.home-header {
  width: 100%;
  height: 104rpx;
  box-sizing: border-box;
  padding: 20rpx 36rpx 20rpx 36rpx;
  display: flex;
  background: #fff;
}

.header-search {
  width: 380rpx;
  height: 64rpx;
  background: #f5f5f5;
  border-radius: 100rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  box-sizing: border-box;
  padding: 14rpx 35rpx;
  position: relative;
}

.search-left {
  position: absolute;
  top: 23rpx;
  left: 24rpx;
  width: 24rpx;
  height: 24rpx;
}

.search-left image {
  display: block;
  width: 100%;
  height: 100%;
}

.search-right {
  flex: 1;
  height: 100%;
  margin-left: 25rpx;
}

.search-right .search-box {
  height: 100%;
  min-height: 1rem;
  font-size: 26rpx;
  color: #999;
}

.header-address {
  width: 278rpx;
  background: #f5f5f5;
  border-radius: 100rpx;
  margin-left: 20rpx;
  box-sizing: border-box;
  /* padding: 14rpx 30rpx; */
  display: flex;
  justify-content: center;
  align-items: center;
}

.address-icon {
  width: 22rpx;
  height: 27rpx;
}

.address-icon image {
  display: block;
  width: 100%;
  height: 100%;
}

.address-city {
  max-width: 300rpx;
  font-size: 26rpx;
  margin-left: 14rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
/** ?? **/
.banner{
    width:100%;
    box-sizing:border-box;
    padding: 0 20rpx;
}
/* 主体 */
.ay-content{
  width: 100%;
  display: flex;
  flex-direction: column;
  background-color: rgba(255, 255, 255, .9)
}
.ay-content .tit{
  font-size: 120rpx;
  text-align: center;
  margin: 20rpx 0;
}
.ay-content .con-a{
  display: flex;
  justify-content: center;
  width: 100%;
}
.ay-content .con-a .af{
  font-size: 16px;
  line-height: 28px;
}
.ay-content .con-a .bf{
  margin:0 20rpx;
}
.ay-content .con-a .cf{
  text-align: center;
  width: 120rpx;
  background-color: #49a9ee;
  border-radius: 5rpx;
  height: 28px;
  line-height: 28px;
  color: #fff;
}
.info-b{
  display: flex;
  justify-content: center;
  color: #666;
  font-size: 12px;
  margin: 20rpx 0 80rpx;
}
.info-b .fo{
  display: flex;
  justify-content: center;
  align-items: center;
}
.info-b .b{
  width: 100rpx;
  padding-left: 5rpx;
}
/*今明两天板块*/
.tadmodule{
  clear: both;
  display: flex;
  /* height:200rpx; */
}
.tadmodule .tad{
  width: 49%;
}
.tadmodule  .line{
  flex: 1;
  border-right: 1px solid #eee;
}
.tad-a{
  display: flex;
  flex-direction: column;
}
.tad-a .a-a{
  display: flex;
  margin-bottom: 20rpx;
}
.tad{
  padding:20rpx;
  display: flex;
  justify-content: space-between;
  font-size: 14px;
}
.tad-a .a-a .a-y{
  padding:0 30rpx;
  background-color: #49a9ee;
  border-radius: 5rpx;
  color: #fff;
  margin-left:10rpx;
}
/* 生活指数 */
.ayexponent{
  margin:40rpx 10rpx;
}
.ayexponent .ent-a{
  border-bottom: 1px solid #eee;
  color: #666;
  font-size: 16px;
  padding-bottom: 10rpx;
}
.ayexponent .ent-b{
  display: flex;
  flex-wrap: wrap;
}
.ayexponent .ent-b .list{
  width: 25%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 0;
}
.ayexponent .ent-b .list .list-b{
  font-size: 12px;
  margin:10rpx 0;
}
.ayexponent .ent-b .list .list-c{
  font-size: 10px;
}
